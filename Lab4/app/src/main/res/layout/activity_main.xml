<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lab4.MainActivity">

    <Button
        android:id="@+id/zoom_in_xml_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:minWidth="150dp"
        android:onClick="androidZoomInAnimation"
        android:text="Zoom In" />

    <Button
        android:id="@+id/zoom_out_xml_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/zoom_in_xml_animation"
        android:minWidth="150dp"
        android:onClick="androidZoomOutAnimation"
        android:text="Zoom Out" />

</RelativeLayout>